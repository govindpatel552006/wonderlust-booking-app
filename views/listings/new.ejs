<% layout("/layouts/boilerplate") %>

<body class="bg-gray-900 text-white">

  <div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Create a New Listing</h1>

    <form action="/listings" method="POST"
      class="max-w-xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg space-y-4" enctype="multipart/form-data">

      <!-- Title -->
      <div>
        <label for="title" class="block font-semibold mb-1">Title</label>
        <input type="text" name="title" id="title" required
          class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block font-semibold mb-1">Description</label>
        <textarea name="description" id="description" required
          class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-green-500"></textarea>
      </div>

      <!-- Price & Location -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="price" class="block font-semibold mb-1">Price (â‚¹)</label>
          <input type="number" name="price" id="price" required min="0"
            class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-green-500">
        </div>

        <div>
          <label for="location" class="block font-semibold mb-1">Location</label>
          <input type="text" name="location" id="location" required
            class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-green-500">
        </div>
      </div>

      <!-- Country -->
      <div>
        <label for="country" class="block font-semibold mb-1">Country</label>
        <input type="text" name="country" id="country" required
          class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Image -->
      <div>
        <label for="image" class="block font-semibold mb-1">Upload Image</label>
        <input type="file" name="image" id="image" required
          class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Submit -->
      <button type="submit"
        class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition">
        Create Listing
      </button>
    </form>
  </div>

</body>





